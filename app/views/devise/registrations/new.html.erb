<% provide(:title, 'Sign Up') %>
<style>
  #main-wrapper {
    padding: 6em;
  }
</style>
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :first_name %>
  <%= f.text_field :first_name, :autofocus => true %></div><br />

  <div><%= f.label :last_name %>
  <%= f.text_field :last_name %></div><br />

  <div><%= f.label :tag_line %>
  <%= f.text_field :tag_line %></div><br />

  <div><%= f.label :activity, "What are you working on?" %><br />
  <%= f.text_area :activity, :class => 'ckeditor' %></div>

  <div><%= f.label :email %>
  <%= f.email_field :email %></div><br />

  <div><%= f.label :password %>
  <%= f.password_field :password %></div><br />

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div><br />
  <p>Please fill in the captcha below</p>
  <div>
    <%= recaptcha_tags %>
  </div>
  <br>
  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
