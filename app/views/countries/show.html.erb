<div class = "row">
	<div class="span8 well">
		<legend><h4>Events we organize</h4></legend>
	</div>
	<div class="span3 well pull-right">
		<legend><h4><%= @country.name %></h4></legend>
		<div><%= image_tag(@country.flag) %></div>
		<div><%= @country.description %></div>
	</div>
</div>
<div>
	<legend>
		<h4>We are looking forward to meet</h4>
	</legend>
	 <div class="row" style="margin-bottom:10px;">
	 	<% all_people.each do |person| %>
	 		<% if @country.id == person.country_id %> 
	 			<div class="col-sm-3 col-md-2">
	 				<div class="thumbnail">
	 					<%= image_tag person.photo, size: "200x150" %>
	 					<div class="caption">
	 						<h3><%= link_to person.name, "http://" + person.online_profile_link %></h3>
	         			    <%= person.occupation %><br>
	         			    <%= Country.find(person.country_id).name %>
	 					</div>
	 				</div>
	 			</div>
	 		<% end %>
	 	<% end %>
	 </div>
	 <hr>
	 
</div>
	<% all_posts.tagged_with(@country.name).each do |post| %>
		<h2><%= raw post.title %></h2>
		<!--<%= post.created_at %> -->
		<%= raw post.content %>
	<% end %>
</div>