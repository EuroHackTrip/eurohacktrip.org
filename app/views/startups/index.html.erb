<h2>All Startups</h2>

  <% j=0 %>
  <% @startups = @startups.paginate(page:params[:page],per_page:8) %>
  <% @startups.each do |startup| %>
    <div class="row">
      <div class="2u" style="">
        <%= link_to image_tag(startup.logo.url, width:"100%"), startup %>
      </div>
      <div class="10u" style="">
        <header>
          <h3>
            <%= link_to startup.name, startup %> - <%= startup.tagline %>
          </h3>
        </header>
        <p><%= raw shorten(startup.description, 500) %><%= link_to ' ...more', startup %> </p>
      </div>
    </div>
  <% end %>

<div class="text-right">
  <%= will_paginate @partners %>
</div>

<% if current_user && current_user.is_admin? %>
<%=  link_to 'New Startup', new_startup_path %>
<% end %>
