
<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, style: "width:100%;" %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, style: "width:100%;", :class => 'ckeditor' %>
  </div>
  <div class="field">
    <%= f.label :show_in_nav %>
    <%= f.check_box :show_in_nav %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
